<h1>新規商品の追加</h1>

<%= simple_form_for [:admins,@item] do |f| %>
    <div class="form-group">
      <%= f.label :item, '*Item' %>
      <%= f.text_field :item ,class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :text, '*Text' %>
      <%= f.text_field :text ,class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :price, '*Price' %>
      <%= f.text_field :price ,class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.label :image, 'image' %>
      <%= f.file_field :image %>
    </div>
  <%= f.button :submit, "CREATE PRODUCT", :class => 'btn' %>
<% end %>